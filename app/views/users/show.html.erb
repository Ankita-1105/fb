<div class="container">
  <div class="row">
    <div class="col md-4">

      <% if @user.image_url %>
        <%= image_tag @user.image_url, width:"200px",height:"200px", class:"image" %>
      <% else %>
      <%= image_tag "1.jpg", width:"200px",height:"200px"  %>
      <% end %>
      

    </div>
    <div class="col md-8">
      <h1><%= @user.full_name %></h1>
   
      <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-default" if @user.id == current_user.id %> 
 
      <div><%= @user.posts.count %> Posts</div>
</div>
</div>

<div class="container">
    <div class="row">
      <% @posts.each do |post| %>
          

      <div class="col-md-3"  style="margin-top: 20px;margin-left: 20px;">
        
            <%=  image_tag post.image_url, width: "100%", height: "250px" %>
      </div>
      <% end %>
    </div>
  </div>



